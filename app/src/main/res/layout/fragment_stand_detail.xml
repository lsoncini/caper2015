<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/stand_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:background="@color/primary_dark_material_dark"
                android:textSize="20sp"
                android:padding="20dp"
                android:textStyle="bold"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/add_fav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:background="@color/primary_dark_material_dark"
                android:textSize="14sp"
                android:padding="5dp"
                android:textStyle="bold"
                android:singleLine="true"
                android:text="@string/add_to_fav"/>
            <TextView
                android:id="@+id/remove_fav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:background="@color/primary_dark_material_dark"
                android:textSize="14sp"
                android:padding="5dp"
                android:textStyle="bold"
                android:singleLine="true"
                android:text="@string/remove_from_fav"/>
            </LinearLayout>

        <ImageView
            android:id="@+id/floor_plan"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#FFFFFF"
            android:padding="0dp"/>
        <include layout="@layout/location_layout"
            android:id="@+id/location_layout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <include layout="@layout/description_layout"
            android:id="@+id/description_layout"/>
        <include layout="@layout/people_layout"
            android:id="@+id/people_layout"/>
        <include layout="@layout/actions_layout"
            android:id="@+id/actions_layout"/>
    </LinearLayout>
</ScrollView>